<%- include('../partials/header') %>

<h2>Flights</h2>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight #</th>
                <th>Departure Date</th>
                <th>Departure Time</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(f) { %>
            <tr>
                <td><%= f.airline %></td>
                <td><%= f.airport %></td>
                <td><%= f.flightNo %></td>
                <td><%= f.departs.toLocaleDateString() %></td>
                <td><%= f.departs.toLocaleString('en-US', { timeZone: 'America/New_York', hour: '2-digit', minute: '2-digit'}) %></td>
                <td><a href="/flights/<%= f._id %>">Details</a></td>
            </tr>
            <% }) %>
        </tbody>
    </table>

<%- include('../partials/footer') %>